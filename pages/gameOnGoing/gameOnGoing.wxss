/* pages/gameOnGoing/gameOnGoing.wxss */
.gameOnGoingContainer{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: #E5E5E5;
}
.configBox{
    display: flex;
    align-items: center;
    width: 688rpx;
    height: 104rpx;
    margin: 28rpx 0; 
    background: #FFFFFF;
    border-radius: 24rpx;
}
.config{
    display: flex;
    align-items: center;
    padding-left: 38rpx;
}
.label{
    height: 48rpx;
    margin-left: 38rpx;
    padding: 4rpx 26rpx;
    background-color: #F5F6FB;
    border-radius: 24rpx;
    font-size: 24rpx;
    line-height: 48rpx;
}
.playerBox{
    display: grid;
    grid-template-columns: repeat(auto-fill, 160rpx);
    grid-template-rows: repeat(auto-fill, 160rpx);
    grid-row-gap: 16rpx;
    grid-column-gap: 16rpx;
    grid-auto-flow: row;
    width: 688rpx; 
    height: 688rpx;
}
.player{
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 160rpx;
    height: 160rpx; 
    background-color: #fff;
    border-radius: 24rpx;
}
.operateBox{
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: wrap;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 402rpx;
    padding: 72rpx 0;
    box-sizing: border-box;
    background-color: #fff;
}
.operate{
    width: 328rpx !important ;
    height: 108rpx !important;
    margin-bottom: 40rpx;
    padding: 0;
    font-size: 36rpx;
    line-height: 108rpx;
    color: #27292F;
    background-color: #F5F6FB;
    border-radius: 24rpx;
}
.myIdentityBtn{
    color: #fff !important;
    background-color: #27292F !important;
}
.ModalBox{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100%;
    height: 814rpx;

}
.myIdentityImg{
    width: 310rpx;
}
.myIdentityLabel{
    width: 276rpx;
    height: 96rpx;
    background: #F5F6FB;
    border-radius: 24rpx;
    font-size: 48rpx;
    text-align: center;
    line-height: 96rpx;
}
