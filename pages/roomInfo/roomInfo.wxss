/* pages/roomInfo/roomInfo.wxss */
.roomInfoContainer{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100%;
    background-color: #E5E5E5;
}
.identityBox{
    display: flex;
    width: 688rpx;
    height: 178rpx;
    margin-top: 28rpx;
    box-sizing: border-box;
    padding-left: 44rpx;
    padding-top: 12rpx;
    padding-bottom: 12rpx;
    background: #FFFFFF;
    border-radius: 24rpx;
    font-size: 28rpx;
}
.identityImg{
    width: 116rpx;
    height: 154rpx;
}
.infoBox{
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    padding-left: 38rpx;
}
.label{
    height: 48rpx;
    margin-left: 38rpx;
    padding: 4rpx 26rpx;
    background-color: #F5F6FB;
    border-radius: 24rpx;
    font-size: 24rpx;
    line-height: 40rpx;
}
.tipsBox{
    margin: 28rpx auto;
    width: 688rpx;
}
.tips{
    height: 63rpx;
    padding: 10rpx 26rpx;
    font-size: 28rpx;
    line-height: 20rpx;
    color: rgba(39, 41, 47, 0.8);
    background-color: #E8EAF2;
    border-radius: 24rpx;
}
.playerBox{
    display: flex;
    justify-content: space-evenly;
    align-items: unset;
    flex-wrap: wrap;
    width: 688rpx;
    height: 688rpx;
}
.player,
.playerTarget{
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 160rpx;
    height: 160rpx; 
    background-color: #fff;
    border-radius: 24rpx;
}
.player .lock{
    width: 72rpx;
    height: 72rpx;
}
.playerInfo,
.playerAvatar{
    width: 100%;
    height: 100%;
} 
.playerName{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 60rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 60rpx;
    background-color: rgba(39, 41, 47, 0.7);
    backdrop-filter: blur(5px);
    border-radius: 24rpx;
}
.waiting{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    box-sizing: border-box;
    color: #D4D6DF;
    line-height: 28rpx;
    padding: 48rpx 0;
    width: 100%;
    height: 100%;
}
.operateBox{
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    bottom: 0;
    width: 100%; 
    height: 212rpx;
    background-color: #fff;
}
.operate{
    width: 328rpx !important ;
    height: 108rpx !important;
    margin-bottom: 40rpx;
    padding: 0;
    font-size: 36rpx;
    line-height: 108rpx;
    color: #27292F;
    background-color: #F5F6FB;
    border-radius: 24rpx;
}
.startDeal[aria-disabled="true"]{
    color: #27292F 80% !important;
    background-color: #F5F6FB !important;
}
.startDeal[aria-disabled="false"]{
    color: #fff !important;
    background-color: #27292F !important;
} 
.mask{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
}
.playerOutContainer{
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 688rpx;
    height: 360rpx;
    background-color: #fff;
    margin-top: -140rpx;
    padding-top: 80rpx;
    box-sizing: border-box;
    border-radius: 24rpx;
    z-index: 2;
}
.playerOutTxt{
    font-size: 36rpx;
    color: #000;
}
.modal-footer{
    display: flex;
    width:92%;
    margin-top: 22rpx;
    justify-content: space-between;
}
.cancel-btn{
    width: 276rpx !important;
    height: 84rpx !important;
    box-sizing: border-box;
    padding: 0;
    line-height: 84rpx;
    border-radius: 16rpx;
    background-color: #F5F6FB !important;
} 
.confirm-btn {
    width: 276rpx !important;
    height: 84rpx !important;
    box-sizing: border-box; 
    padding: 0;
    line-height: 84rpx;
    border-radius: 16rpx;
    background-color: #27292f !important;
    color: #ffffff !important;
}
.playerTarget{
    position: absolute;
    top: -80rpx;
}