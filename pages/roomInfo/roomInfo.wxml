<view class="roomInfoContainer">
    <TopNavigation topText="{{123}}"></TopNavigation>
    <view class="identityBox">
        <image class="identityImg" src="/static/werewolf/guard.png"></image>
        <view class="infoBox">
            <view class="identity">
                <text>我的身份</text>
