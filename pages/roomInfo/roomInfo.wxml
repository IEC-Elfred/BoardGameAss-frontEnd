    </view>
    <view class="playerBox">
        <view class="player">
            <view class="playerInfo" bindtap="onPlayerOut">
                <image class="playerAvatar" src="/static/werewolf/back.png"></image>
                <view class="playerName">李华</view>
            </view>
        </view>
