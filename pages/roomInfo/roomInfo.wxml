<view class="mask" hidden="{{!playerOut}}" bindtap="onPlayerOut">
    <view class="playerOutContainer"> 
        <view class="playerTarget">
            <view class="playerInfo"> 
                <image class="playerAvatar" src="/static/werewolf/back.png"></image>
                <view class="playerName">李华</view>
            </view>
        </view>
        <text class="playerOutTxt">确定将标记该玩家出局吗？</text>
        <text class="playerOutTxt">出局玩家可查看所有出局者身份</text>
        <view class="modal-footer">
            <button class="cancel-btn" bindtap="cancel">取消</button>
            <button class="confirm-btn" bindtap="confirm">确定</button>
        </view>
    </view>
</view>
 