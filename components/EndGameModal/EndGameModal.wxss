/* components/endGameModal/EndGameModal.wxss */
.mask{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
}
.endGameContainer{
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 688rpx;
    height: 296rpx;
    background-color: #fff;
    margin-top: -400rpx;
    box-sizing: border-box;
    border-radius: 24rpx;
    z-index: 2;
}
.endGameTxt{
    font-size: 36rpx;
    color: #000;
}
.modal-footer{
    display: flex;
    width:92%;
    margin-top: 46rpx;
    justify-content: space-between;
}
.cancel-btn{
    width: 276rpx !important;
    height: 84rpx !important;
    box-sizing: border-box;
    padding: 0;
    line-height: 84rpx;
    border-radius: 16rpx;
    background-color: #F5F6FB !important;
} 
.confirm-btn {
    width: 276rpx !important;
    height: 84rpx !important;
    box-sizing: border-box; 
    padding: 0;
    line-height: 84rpx;
    border-radius: 16rpx;
    background-color: #27292f !important;
    color: #ffffff !important;
}