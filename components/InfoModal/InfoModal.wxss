/* components/InfoModal/InfoModal.wxss */
.mask{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1;
}
.container{
    width: 688rpx;
    height: 814rpx;
    margin-bottom: 68rpx;
    background: #FFFFFF;
    border-radius: 24rpx;
    z-index: 2;
}
.hide{
    position: relative;
    width: 96rpx;
    height: 96rpx;
    border: 2px solid #FFFFFF;
    box-sizing: border-box;
    border-radius: 50%;
}
.hide::before{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%) rotate(45deg);
    display: block;
    content: '';
    width: 48rpx;
    height: 8rpx;
    border-radius: 4rpx;
    background-color: #fff;
}
.hide::after{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%) rotate(-45deg);
    display: block;
    content: '';
    width: 48rpx;
    height: 8rpx;
    border-radius: 4rpx;
    background-color: #fff;
}
